<div class="jumbotron jumbotron-fluid text-white bg-dark">
  <div class="container text-center">
    <h1 class="display-4">AirD'n'B</h1>
    <p class="lead">Find the drum for your bass with cheap holiday flats.</p>
  </div>
</div>
<div class="container mt-5">
  <div class="card p-3">
    <div class="card-header">
      <h2>Flats currently available</h2>
    </div>
    <div class="card-body">
      <% @flats.each do |flat| %>
        <div class="flat p-3">
          <%= image_tag "https://picsum.photos/300/200?random=#{flat.id}", class: 'img-fluid mb-1 d-block mx-auto' %>
          <h2><%= flat.name %></h2>
          <p><%= flat.description %></p>
          <p><%= number_to_currency(flat.price_per_night) %> per night</p>
          <%= link_to 'Show', flat_path(flat), class: 'btn btn-secondary' %>
        </div>
        <div class="container text-center"">
        <h5>
          Are you a predatory exploiter? (landlord)
        </h5>
          <%= link_to 'New Flat', new_flat_path, class: 'btn btn-primary' %>
          <h5>Register your property here!</h5>
          </div>
      <% end %>
    </div>
  </div>
</div>
