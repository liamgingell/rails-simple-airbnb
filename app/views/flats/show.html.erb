<div class="card p-1">
  <div class="flat">
    <div class="container mt-5">
      <div class="card p-3">
        <div id="flatCarousel" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% (1..3).each do |i| %>
              <div class="carousel-item <%= 'active' if i == 1 %>">
                <%= image_tag "https://picsum.photos/800/400?random=#{@flat.id + i}", class: 'd-block w-100' %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#flatCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#flatCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="card-header mt-3">
          <h2><%= @flat.name %></h2>
          <p><%= @flat.description %></p>
          <p><%= number_to_currency(@flat.price_per_night) %> per night</p>
        </div>
        <div class="card-body">
          <%= link_to 'Edit', edit_flat_path(@flat), class: 'btn btn-primary' %>
          <%= link_to 'Back', flats_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>
