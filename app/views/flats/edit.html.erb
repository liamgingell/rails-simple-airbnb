<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h2>Edit <%= @flat.name %></h2>
    </div>
    <div class="card-body">
      <%= form_with(model: @flat, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :address, class: 'form-label' %>
          <%= form.text_field :address, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :description, class: 'form-label' %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :price_per_night, class: 'form-label' %>
          <%= form.number_field :price_per_night, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :number_of_guests, class: 'form-label' %>
          <%= form.number_field :number_of_guests, class: 'form-control' %>
        </div>
        <div class="form-group mt-3">
          <%= form.submit 'Save Changes', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
    <div class="card-footer">
      <%= link_to 'Show', @flat, class: 'btn btn-secondary' %>
      <%= link_to 'Back', flats_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
